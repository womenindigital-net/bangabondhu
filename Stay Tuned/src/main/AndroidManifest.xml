<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.womenindigital.staytuned">

    <application
        android:allowBackup="true"
        android:icon="@drawable/roundicon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/roundicon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.photos.PhotoSingleActivity"></activity>
        <activity android:name=".VideoPlayerActivity" />
        <activity
            android:name=".BookOpenerActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SinglePhotoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SingleQuoteActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".GridQuoteActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".WriteQuoteActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ContributeActivity" />
        <activity
            android:name=".HomePageActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LauncherActivity"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
    </application>
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>